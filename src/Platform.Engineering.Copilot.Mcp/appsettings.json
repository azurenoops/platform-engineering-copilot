{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=SupervisorPlatformDb;User Id=sa;Password=SupervisorDB123!;TrustServerCertificate=true;Encrypt=false;MultipleActiveResultSets=true",
    "SqlServerConnection": "Server=localhost,1433;Database=SupervisorPlatformDb;User Id=sa;Password=SupervisorDB123!;TrustServerCertificate=true;Encrypt=false;MultipleActiveResultSets=true"
  },
  "DatabaseProvider": "SqlServer",
  "Gateway": {
    "Azure": {
      "UseManagedIdentity": false,
      "CloudEnvironment": "AzureGovernment",
      "Enabled": true
    },
    "AzureOpenAI": {
      "ApiKey": "${AZURE_OPENAI_API_KEY}",
      "Endpoint": "${AZURE_OPENAI_ENDPOINT:-https://mcp-ai.openai.azure.us/}",
      "DeploymentName": "${AZURE_OPENAI_DEPLOYMENT:-gpt-4o}",
      "UseManagedIdentity": false,
      "ChatDeploymentName": "${AZURE_OPENAI_CHAT_DEPLOYMENT:-gpt-4o}",
      "EmbeddingDeploymentName": "${AZURE_OPENAI_EMBEDDING_DEPLOYMENT:-text-embedding-ada-002}"
    },
    "GitHub": {
      "AccessToken": "${GITHUB_TOKEN}",
      "ApiBaseUrl": "https://api.github.com",
      "DefaultOwner": "${GITHUB_DEFAULT_OWNER}",
      "Enabled": true
    },
    "ConnectionTimeoutSeconds": 60,
    "RequestTimeoutSeconds": 300
  },
  "NistControls": {
    "BaseUrl": "https://raw.githubusercontent.com/usnistgov/oscal-content/main/nist.gov/SP800-53/rev5/json",
    "TimeoutSeconds": 60,
    "CacheDurationHours": 24,
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 2,
    "EnableOfflineFallback": true,
    "EnableDetailedLogging": false
  }
}
