{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=chat.db"
  },
  "McpServer": {
    "BaseUrl": "http://localhost:5100",
    "Comment": "MCP Server HTTP endpoints - generic REST API for any chat application"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5001"
      }
    },
    "Limits": {
      "MaxRequestHeadersTotalSize": 65536,
      "MaxRequestLineSize": 16384,
      "MaxRequestBufferSize": 1048576
    }
  }
}